<h1>Burgers</h1>

<h2>Burgers to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        <span>id : </span>{{this.id}}
        <span>name : </span>{{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        <span>id : </span>{{this.id}}
        <span>name : </span>{{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <input type="hidden" name="devoured" value="0">
  </div>

  <button type="submit">Add</button>
</form>